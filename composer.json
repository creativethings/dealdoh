{
  "name": "noglitchyo/dealdoh",
  "description": "A simple DNS over HTTPS proxy built on PHP.",
  "keywords": [
    "dns",
    "dns-resolver",
    "dns-over-https",
    "doh",
    "dns-proxy",
    "dns-client"
  ],
  "license": "MIT",
  "authors": [
    {
      "email": "maxime.elomari@gmail.com",
      "name": "Maxime Elomari"
    }
  ],
  "require": {
    "clue/socket-raw": "^1.4",
    "ext-json": "*",
    "ext-sockets": "*",
    "nyholm/psr7": "^1.1",
    "php": "^7.3",
    "psr/http-client": "*",
    "psr/log": "^1.1",
    "react/dns": "^0.4.17"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.1",
    "mockery/mockery": "^1.2",
    "monolog/monolog": "^1.24",
    "squizlabs/php_codesniffer": "*",
    "phpstan/phpstan": "^0.11.8"
  },
  "autoload": {
    "psr-4": {
      "NoGlitchYo\\Dealdoh\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NoGlitchYo\\Dealdoh\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpstan": "phpstan analyse -l max src",
    "phpcs": "phpcs --standard=PSR2 ./src/",
    "test": "phpunit phpunit.dist.xml"
  }
}
